import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        System.out.println("Enter the number of the seats in the hall");
        int seats = Integer.parseInt(scan.nextLine());
        System.out.println("Enter the number of the the filled ones seats in zone A");
        int zA = Integer.parseInt(scan.nextLine());
        System.out.println("Enter the number of the the filled ones seats in zone B");
        int zB = Integer.parseInt(scan.nextLine());
        System.out.println("Enter the number of the the filled ones seats in zone C");
        int zC = Integer.parseInt(scan.nextLine());
        
        
        double zAprofit = zA * 20.7;
        double zBprofit = zB * 18.6;
        double zCprofit = zC * 15.5;
        

        double totalprofit = zAprofit + zBprofit + zCprofit;

        System.out.println(String.format("%.2f", totalprofit));
    }
}
